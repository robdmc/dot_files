#! /usr/bin/make 



.PHONY: help
help:  ## Print the help documentation
	@grep -E '^[a-zA-Z_-]+.*?:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

.PHONY: ai
ai: ## Default to env
	sed -i 's/conda activate [a-z_0-9]*[a-z_0-9]/conda activate ai_2024_01_25a/g' profiles.json

.PHONY: experiment
experiment: ## Default to env
	sed -i 's/conda activate [a-z_0-9]*[a-z_0-9]/conda activate experiment/g' profiles.json

.PHONY: viz
viz: ## Default to env
	sed -i 's/conda activate [a-z_0-9]*[a-z_0-9]/conda activate viz/g' profiles.json

.PHONY: show
show: ## Default to env
	@grep -oP 'conda activate \K[^ \\]+' profiles.json

